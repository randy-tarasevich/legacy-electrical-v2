---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact" description="Get in touch with Legacy Electrical CT for a free estimate. Serving all of Connecticut.">
  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 overflow-hidden circuit-bg">
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 -right-32 w-96 h-96 bg-electric/5 rounded-full blur-3xl"></div>
    </div>
    
    <div class="max-w-7xl mx-auto px-6 md:px-12 relative z-10">
      <div class="max-w-3xl">
        <div class="inline-flex items-center gap-2 bg-steel px-4 py-2 rounded-full mb-8 animate-fade-up">
          <span class="w-2 h-2 bg-electric rounded-full"></span>
          <span class="text-silver text-sm font-medium">Contact Us</span>
        </div>
        
        <h1 class="text-5xl md:text-6xl font-heading font-bold leading-tight mb-6 animate-fade-up">
          Let's <span class="text-electric glow-text">Connect</span>
        </h1>
        
        <p class="text-xl text-silver leading-relaxed animate-fade-up-delay">
          Ready to start your electrical project? Get in touch for a free estimate. 
          We typically respond within 24 hours.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section-padding bg-steel">
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="rounded-xl bg-carbon p-8 md:p-10 border border-carbon">
          <h2 class="font-heading text-2xl font-bold mb-6">Request a Free Estimate</h2>
          
          <form 
            action="https://api.web3forms.com/submit" 
            method="POST" 
            id="contact-form"
            class="space-y-6"
          >
            <!-- Web3Forms Access Key -->
            <input type="hidden" name="access_key" value="c89bcd28-0482-40a7-876e-193e9da3d525">
            
            <!-- Optional: Customize subject line -->
            <input type="hidden" name="subject" value="New Contact from Legacy Electrical CT Website">
            
            <!-- Optional: Redirect after submission -->
            <input type="hidden" name="redirect" value="">
            
            <!-- Honeypot Spam Protection -->
            <input type="checkbox" name="botcheck" class="hidden" style="display: none;">
            
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-silver mb-2">
                  Full Name <span class="text-electric">*</span>
                </label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required
                  class="w-full rounded-lg bg-steel border border-carbon text-white px-4 py-3 focus:border-electric focus:outline-none transition-colors"
                  placeholder="John Smith"
                >
              </div>
              
              <div>
                <label for="phone" class="block text-sm font-medium text-silver mb-2">
                  Phone Number <span class="text-electric">*</span>
                </label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone" 
                  required
                  class="w-full rounded-lg bg-steel border border-carbon text-white px-4 py-3 focus:border-electric focus:outline-none transition-colors"
                  placeholder="(860) 604-9325"
                >
              </div>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-silver mb-2">
                Email Address <span class="text-electric">*</span>
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full rounded-lg bg-steel border border-carbon text-white px-4 py-3 focus:border-electric focus:outline-none transition-colors"
                placeholder="john@example.com"
              >
            </div>
            
            <div>
              <label for="service" class="block text-sm font-medium text-silver mb-2">
                Service Needed
              </label>
              <select 
                id="service" 
                name="service"
                class="w-full rounded-lg bg-steel border border-carbon text-white px-4 py-3 focus:border-electric focus:outline-none transition-colors"
              >
                <option value="">Select a service...</option>
                <option value="Residential - Repairs">Residential - Repairs</option>
                <option value="Residential - Panel Upgrade">Residential - Panel Upgrade</option>
                <option value="Residential - Rewiring">Residential - Rewiring</option>
                <option value="Residential - Lighting">Residential - Lighting</option>
                <option value="Commercial - Wiring">Commercial - Wiring</option>
                <option value="Commercial - Lighting">Commercial - Lighting</option>
                <option value="EV Charger Installation">EV Charger Installation</option>
                <option value="Generator Installation">Generator Installation</option>
                <option value="Smart Home">Smart Home</option>
                <option value="Other">Other</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-silver mb-2">
                Project Details <span class="text-electric">*</span>
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="5"
                required
                class="w-full rounded-lg bg-steel border border-carbon text-white px-4 py-3 focus:border-electric focus:outline-none transition-colors resize-none"
                placeholder="Tell us about your electrical project..."
              ></textarea>
            </div>
            
            <div>
              <label for="preferred_contact" class="block text-sm font-medium text-silver mb-2">
                Preferred Contact Method
              </label>
              <div class="flex gap-6">
                <label class="flex items-center gap-2 cursor-pointer">
                  <input 
                    type="radio" 
                    name="preferred_contact" 
                    value="Phone" 
                    checked
                    class="w-4 h-4 text-electric bg-steel border-carbon focus:ring-electric"
                  >
                  <span class="text-silver">Phone</span>
                </label>
                <label class="flex items-center gap-2 cursor-pointer">
                  <input 
                    type="radio" 
                    name="preferred_contact" 
                    value="Email"
                    class="w-4 h-4 text-electric bg-steel border-carbon focus:ring-electric"
                  >
                  <span class="text-silver">Email</span>
                </label>
                <label class="flex items-center gap-2 cursor-pointer">
                  <input 
                    type="radio" 
                    name="preferred_contact" 
                    value="Either"
                    class="w-4 h-4 text-electric bg-steel border-carbon focus:ring-electric"
                  >
                  <span class="text-silver">Either</span>
                </label>
              </div>
            </div>
            
            <button 
              type="submit"
              class="btn-primary w-full justify-center"
            >
              Send Message
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
              </svg>
            </button>
            
            <p class="text-silver text-xs text-center">
              By submitting this form, you agree to be contacted regarding your inquiry.
            </p>
          </form>
          
          <!-- Success Message (hidden by default) -->
          <div id="success-message" class="hidden text-center py-12">
            <div class="w-16 h-16 bg-electric/20 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-electric" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <h3 class="font-heading text-2xl font-bold mb-3">Message Sent!</h3>
            <p class="text-silver">
              Thank you for reaching out. We'll get back to you within 24 hours.
            </p>
          </div>
        </div>
        
        <!-- Contact Info -->
        <div class="space-y-8">
          <!-- Direct Contact -->
          <div class="rounded-xl bg-carbon p-8 border border-carbon">
            <h3 class="font-heading text-xl font-bold mb-6">Contact Information</h3>
            
            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 rounded-lg bg-electric/10 flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-electric" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold mb-1">Phone</h4>
<a href="tel:+18606049325" class="text-electric hover:text-volt transition-colors text-lg">
                  (860) 604-9325
                  </a>
                  <p class="text-silver text-sm mt-1">Mon-Fri: 7am - 6pm</p>
                </div>
              </div>
              
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 rounded-lg bg-electric/10 flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-electric" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold mb-1">Email</h4>
                  <a href="mailto:tayler@legacyelectricalct.com" class="text-electric hover:text-volt transition-colors">
                    tayler@legacyelectricalct.com
                  </a>
                  <p class="text-silver text-sm mt-1">We respond within 24 hours</p>
                </div>
              </div>
              
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 rounded-lg bg-electric/10 flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-electric" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold mb-1">Service Area</h4>
                  <p class="text-silver">East Berlin, CT 06023</p>
                  <p class="text-silver text-sm mt-1">Serving all of Connecticut</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Emergency Notice -->
          <div class="rounded-xl bg-carbon border-l-4 border-electric p-8">
            <div class="flex items-start gap-4">
              <svg class="w-8 h-8 text-electric flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
              <div>
                <h3 class="font-heading text-xl font-bold mb-2">Electrical Emergency?</h3>
                <p class="text-silver mb-4">
                  For urgent electrical issues, call us immediately. We're available for emergency situations.
                </p>
                <a href="tel:+18606049325" class="text-electric hover:text-volt text-2xl font-heading font-bold">
                  (860) 604-9325
                </a>
              </div>
            </div>
          </div>
          
          <!-- What to Expect -->
          <div class="rounded-xl bg-carbon p-8 border border-carbon">
            <h3 class="font-heading text-xl font-bold mb-6">What to Expect</h3>
            
            <ol class="space-y-4">
              <li class="flex gap-4">
                <span class="w-8 h-8 rounded-lg bg-electric text-carbon font-bold flex items-center justify-center flex-shrink-0">1</span>
                <div>
                  <h4 class="font-bold">Quick Response</h4>
                  <p class="text-silver text-sm">We'll contact you within 24 hours to discuss your project.</p>
                </div>
              </li>
              <li class="flex gap-4">
                <span class="w-8 h-8 rounded-lg bg-electric text-carbon font-bold flex items-center justify-center flex-shrink-0">2</span>
                <div>
                  <h4 class="font-bold">On-Site Assessment</h4>
                  <p class="text-silver text-sm">We'll schedule a time to evaluate your electrical needs.</p>
                </div>
              </li>
              <li class="flex gap-4">
                <span class="w-8 h-8 rounded-lg bg-electric text-carbon font-bold flex items-center justify-center flex-shrink-0">3</span>
                <div>
                  <h4 class="font-bold">Detailed Quote</h4>
                  <p class="text-silver text-sm">You'll receive a transparent, itemized estimate.</p>
                </div>
              </li>
              <li class="flex gap-4">
                <span class="w-8 h-8 rounded-lg bg-volt text-carbon font-bold flex items-center justify-center flex-shrink-0">4</span>
                <div>
                  <h4 class="font-bold">Quality Work</h4>
                  <p class="text-silver text-sm">Once approved, we complete the work to your satisfaction.</p>
                </div>
              </li>
            </ol>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Optional: Handle form submission with JS for better UX
  const form = document.getElementById('contact-form');
  const successMessage = document.getElementById('success-message');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form as HTMLFormElement);
    const submitButton = form.querySelector('button[type="submit"]');
    
    if (submitButton) {
      submitButton.textContent = 'Sending...';
      (submitButton as HTMLButtonElement).disabled = true;
    }
    
    try {
      const response = await fetch('https://api.web3forms.com/submit', {
        method: 'POST',
        body: formData
      });
      
      if (response.ok) {
        form.classList.add('hidden');
        successMessage?.classList.remove('hidden');
      } else {
        throw new Error('Form submission failed');
      }
    } catch (error) {
      alert('There was an error sending your message. Please try again or call us directly.');
      if (submitButton) {
        submitButton.textContent = 'Send Message';
        (submitButton as HTMLButtonElement).disabled = false;
      }
    }
  });
</script>
