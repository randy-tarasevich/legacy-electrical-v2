---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const accessKey = import.meta.env.PUBLIC_WEB3FORMS_KEY;
---

<BaseLayout title="Contact - Legacy Electrical" description="Contact Legacy Electrical for a free quote on your electrical project in Connecticut.">
  <Navbar />

  <div class="max-w-2xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-8 text-center">Contact Us</h1>

    <form id="contact-form" action="https://api.web3forms.com/submit" method="POST" class="space-y-5" novalidate>
      <input type="hidden" name="access_key" value={accessKey} />
      <input type="hidden" name="subject" value="New Contact Form Submission - Legacy Electrical" />
      <input type="hidden" name="redirect" value="https://web3forms.com/success" />
      <input type="checkbox" name="botcheck" class="hidden" />

      <div>
        <label for="name" class="block font-medium mb-1">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          required
          pattern="^[A-Za-z]{2,}(?: [A-Za-z]{1,})*$"
          class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary"
        />
      </div>

      <div>
        <label for="email" class="block font-medium mb-1">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary"
        />
      </div>

      <div>
        <label for="phone" class="block font-medium mb-1">Phone</label>
        <input
          type="tel"
          id="phone"
          name="phone"
          required
          pattern="^(\+\d{1,3}[- ]?)?\(?(\d{3})\)?[- ]?(\d{3})[- ]?(\d{4})$"
          class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary"
        />
      </div>

      <div>
        <label for="message" class="block font-medium mb-1">Briefly describe your project</label>
        <textarea
          id="message"
          name="message"
          rows="3"
          required
          minlength="10"
          maxlength="500"
          class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary"
        ></textarea>
      </div>

      <fieldset>
        <legend class="font-medium mb-2">Property type:</legend>
        <div class="flex gap-6">
          <label class="flex items-center gap-2">
            <input type="radio" name="property_type" value="Residential" checked class="accent-primary" />
            Residential
          </label>
          <label class="flex items-center gap-2">
            <input type="radio" name="property_type" value="Commercial" class="accent-primary" />
            Commercial
          </label>
        </div>
      </fieldset>

      <button type="submit" class="bg-amber hover:bg-amber-dark text-black px-6 py-2 rounded font-semibold transition-colors">
        Submit
      </button>
    </form>
  </div>

  <Footer />
</BaseLayout>
