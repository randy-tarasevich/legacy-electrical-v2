---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="bg-white rounded-lg shadow p-6 hover-zoom">
  <div class="flex items-center gap-3 mb-3">
    <span class="text-primary text-3xl" set:html={icon} />
    <h3 class="font-bold text-lg">{title}</h3>
  </div>
  <p class="text-gray-600">{description}</p>
</div>
