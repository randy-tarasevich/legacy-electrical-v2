---
const services = [
  'Residential Electrical',
  'Commercial Electrical',
  'Electrical Repairs',
  'Panel Upgrades',
  'EV Charger Installation',
  'Generator Installation',
];

const quickLinks = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About Us' },
  { href: '/services', label: 'Services' },
  { href: '/contact', label: 'Contact' },
];
---

<footer class="bg-steel border-t border-carbon rounded-t-2xl">
  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-6 md:px-12 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10">
            <svg viewBox="0 0 40 40" fill="none" class="w-full h-full">
              <path d="M20 2L26 16H14L20 2Z" fill="currentColor" class="text-electric"/>
              <path d="M20 38L14 24H26L20 38Z" fill="currentColor" class="text-volt"/>
              <circle cx="20" cy="20" r="4" fill="currentColor" class="text-white"/>
            </svg>
          </div>
          <div>
            <span class="font-heading text-lg font-bold tracking-wider text-white">LEGACY</span>
            <span class="font-heading text-lg font-bold tracking-wider text-electric ml-1">ELECTRICAL</span>
          </div>
        </a>
        <p class="text-silver text-sm leading-relaxed mb-6">
          Professional electrical contracting services in East Berlin, CT 06023 and throughout Connecticut. 
          Licensed, insured, and committed to excellence.
        </p>
      </div>

      <!-- Services Column -->
      <div>
        <h3 class="font-heading text-lg font-bold tracking-wider text-white mb-6">Services</h3>
        <ul class="space-y-3">
          {services.map((service) => (
            <li>
              <a href="/services" class="text-silver text-sm hover:text-electric transition-colors">
                {service}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Quick Links Column -->
      <div>
        <h3 class="font-heading text-lg font-bold tracking-wider text-white mb-6">Quick Links</h3>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a href={link.href} class="text-silver text-sm hover:text-electric transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Column -->
      <div>
        <h3 class="font-heading text-lg font-bold tracking-wider text-white mb-6">Contact Us</h3>
        <ul class="space-y-4">
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-electric flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="text-silver text-sm">East Berlin, CT 06023<br/>Serving All of Connecticut</span>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-electric flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <a href="tel:+18606049325" class="text-silver text-sm hover:text-electric transition-colors">(860) 604-9325</a>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-electric flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <a href="mailto:tayler@legacyelectricalct.com" class="text-silver text-sm hover:text-electric transition-colors">tayler@legacyelectricalct.com</a>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-carbon">
    <div class="max-w-7xl mx-auto px-6 md:px-12 py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-silver text-sm">
          &copy; 2026 Legacy Electrical CT. All rights reserved.
        </p>
        <p class="text-silver text-sm">
          Licensed & Insured Â· License: ELC.0207936-E1 (CT)
        </p>
      </div>
      <p class="text-silver text-xs text-center mt-4">
        Site design by <a href="https://shorelinewebsolutions.com" target="_blank" rel="noopener noreferrer" class="text-electric hover:text-volt transition-colors">Shoreline Web Solutions</a>
      </p>
    </div>
  </div>
</footer>
