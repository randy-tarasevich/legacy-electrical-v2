---
const currentPath = Astro.url.pathname;
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/services', label: 'Services' },
  { href: '/projects', label: 'Projects' },
  { href: '/contact', label: 'Contact' },
];
---

<nav class="sticky top-0 z-50 bg-white shadow py-3">
  <div class="max-w-7xl mx-auto px-4 flex items-center justify-between">
    <a href="/">
      <img src="/images/Legacy Logo Final.png" alt="Legacy Electrical Logo" class="h-20" />
    </a>

    <!-- Mobile toggle -->
    <button id="nav-toggle" class="lg:hidden p-2" aria-label="Toggle navigation">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

    <!-- Nav links -->
    <div id="nav-menu" class="hidden lg:flex items-center gap-6 text-lg font-medium">
      {navLinks.map(link => (
        <a
          href={link.href}
          class:list={[
            'hover:text-primary transition-colors',
            { 'text-primary font-bold': currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href)) }
          ]}
        >
          {link.label}
        </a>
      ))}
      <a href="tel:860-604-9325" class="bg-amber text-black px-4 py-2 rounded font-semibold hover:bg-amber-dark transition-colors">
        860-604-9325
      </a>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden lg:hidden px-4 pb-4">
    <div class="flex flex-col gap-3 pt-3 text-lg">
      {navLinks.map(link => (
        <a
          href={link.href}
          class:list={[
            'hover:text-primary transition-colors',
            { 'text-primary font-bold': currentPath === link.href }
          ]}
        >
          {link.label}
        </a>
      ))}
      <a href="tel:860-604-9325" class="bg-amber text-black px-4 py-2 rounded font-semibold text-center hover:bg-amber-dark transition-colors">
        860-604-9325
      </a>
    </div>
  </div>
</nav>

<script>
  const toggle = document.getElementById('nav-toggle');
  const menu = document.getElementById('mobile-menu');
  toggle?.addEventListener('click', () => menu?.classList.toggle('hidden'));
</script>
